<launch>
    <arg name="config_file" default="IWR6843ISK.json"/>
    <arg name="radar_enable" default="true"/>
    <arg name="lidar_enable" default="true"/>
    <arg name="camera_enable" default="true"/>
    <arg name="dataset_path" default="/home/locobot/data"/>
    <arg name="frame_rate" default="20"/>
    <arg name="views" default="false"/>
    <include file="$(find radar_launch)/launch/IWR6843_connect.launch" if="$(arg radar_enable)">
        <arg name="config_file" value="$(arg config_file)"/>
    </include>
    <include file="$(find velodyne_pointcloud)/launch/VLP16_points.launch" if="$(arg lidar_enable)"/>
    <include file="$(find usb_cam)/launch/usb_cam-test.launch" if="$(arg camera_enable)"/>
    <include file="$(find radar_launch)/launch/IWR6843_views.launch" if="$(arg views)"/>
    <include file="$(find radar_launch)/launch/IWR6843_dataset.launch">
        <arg name="config_file" value="$(arg config_file)"/>
        <arg name="radar_enable" value="$(arg radar_enable)"/>
        <arg name="lidar_enable" value="$(arg lidar_enable)"/>
        <arg name="camera_enable" value="$(arg camera_enable)"/>
        <arg name="dataset_path" value="$(arg dataset_path)"/>
        <arg name="frame_rate" value="$(arg frame_rate)"/>
    </include>
</launch>